

<h1>Create a new recipe!</h1>

<%= form_for @recipe do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.fields_for :ingredients do |ing| %>
<%= ing.label :name %>
<%= ing.text_field :name %>
<%= ing.label :quantity %>
<%= ing.number_field :quantity %>
<% end %>

<%= f.submit %>

<% end %>
