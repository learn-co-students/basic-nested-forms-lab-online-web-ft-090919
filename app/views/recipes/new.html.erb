<%= form_for @recipe do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br><br><br>

        <%= f.fields_for :ingredients do |i| %>
            Ingredients: <br><br>

            <%= i.label :name %>
            <%= i.text_field :name %><br>

            <%= i.label :quantity %>
            <%= i.text_field :quantity %><br><br>

        <% end %>

    <%= f.submit %>
<% end %>